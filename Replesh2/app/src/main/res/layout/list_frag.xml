<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="70dp"
    android:background="#000"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_album_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/resplash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resplash"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/free_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free high_resolution photos"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            app:layout_constraintTop_toBottomOf="@id/resplash_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view_bar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            app:layout_constraintTop_toBottomOf="@id/free_tv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_home_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_bar"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/collection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_collections_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <View
            android:id="@+id/view_bar2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            app:layout_constraintTop_toBottomOf="@id/collection_tv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/auto_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_collections_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_bar2"
            app:layout_constraintStart_toStartOf="parent"/>


        <View
            android:id="@+id/view_bar3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            app:layout_constraintTop_toBottomOf="@id/auto_tv"
            app:layout_constraintStart_toStartOf="parent"
            />


        <TextView
            android:id="@+id/support_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_collections_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_bar3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_collections_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/support_tv"
            app:layout_constraintStart_toStartOf="parent"/>


        <TextView
            android:id="@+id/about_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collections"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_collections_black_24dp"
            android:drawablePadding="20dp"
            app:layout_constraintTop_toBottomOf="@id/setting_tv"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>